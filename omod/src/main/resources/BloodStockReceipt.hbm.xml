<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="org.openmrs.module.bloodbank.model">

	<class name="BloodStockReceipt" table="bloodbank_bloodstock_receipt" batch-size="500">

		<id name="receiptId" type="int" column="receipt_id"
			unsaved-value="0">
				<generator class="native" />
		</id>
	<!--	<many-to-one name="bloodStock" column="bloodstock_id" class="org.openmrs.module.bloodbank.model.BloodStock" />
		-->  <set name="bloodStocks">
            <key column="receipt_id"/>
            <one-to-many class="org.openmrs.module.bloodbank.model.BloodStock"/>
        </set>
			<property name="description" column="description" />
		<property name="createdOn" column="created_on"  type="java.util.Date" />
		<many-to-one name="createdBy" column="created_by"  class="org.openmrs.User"/>
		
	</class>
</hibernate-mapping>
